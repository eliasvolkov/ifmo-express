<body>
<div class="container">
  <section class="hero">
    <div class="hero__text">
      <h1 class="hero__title">Best Smart Watch 2020</h1>
      <h3 class="hero__subtitle">HONOR vs XIAOMI</h3>
    </div>
  </section>
  <section class="products">
    <div class="grid-usul">
      <div class="img-block">
        <!--                        href="https://docs.google.com/forms/d/1CbJmey4QWAcnNKGJJms7E0R52mFk3oBWFFtcTFWc9Uc/viewform?edit_requested=true"-->
        <img src="./img/logo-honor.png" alt="Honor" />
        <a
                href="#"
                class="btn btn--blue"
                id="btn-Honor"
        >
          know more

          <img src="/img/next.png" alt="next" />
        </a>
      </div>
      <div class="product-block">
        <div class="product-block__img">
          <img
                  src="./img/honor-watch.png"
                  alt="honor-watch"
          />
        </div>
        <div class="product-block__info">
          <div class="product-block__icon" id="batteryIcon">
            <div class="border">
              <div>
                <img
                        src="./img/battery.png"
                        alt="battery"
                />
              </div>
            </div>
          </div>
          <div class="product-block__text">
            OLED touchscreen
          </div>
          <div class="product-block__icon" id="heartIcon">
            <div class="border">
              <div>
                <img
                        src="./img/heart.png"
                        alt="heart"
                />
              </div>
            </div>
          </div>
          <div class="product-block__text">
            Continuous Heart rate monitor
          </div>
          <div class="product-block__icon" id="tapIcon">
            <div class="border">
              <div>
                <img src="./img/tap.png" alt="tap" />
              </div>
            </div>
          </div>
          <div class="product-block__text">
            Up to 20 days battery
          </div>
        </div>
      </div>
    </div>

    <div class="reverse">
      <div class="product-block">
        <div
                class="product-block__img product-block__img--xiaomi"
        >
          <img
                  src="./img/xiaomi-watch2.png"
                  alt="xiaomi-watch"
          />
        </div>
        <div class="product-block__info">
          <div class="product-block__icon" id="xBatteryIcon">
            <div class="border border--xiaomi">
              <div>
                <img
                        src="./img/battery.png"
                        alt="battery"
                />
              </div>
            </div>
          </div>
          <div class="product-block__text">
            OLED touchscreen
          </div>
          <div class="product-block__icon" id="xHeartIcon">
            <div class="border border--xiaomi">
              <div>
                <img
                        src="./img/heart.png"
                        alt="heart"
                />
              </div>
            </div>
          </div>
          <div class="product-block__text">
            Continuous Heart rate monitor
          </div>
          <div class="product-block__icon" id="xTapIcon">
            <div class="border border--xiaomi">
              <div>
                <img src="./img/tap.png" alt="tap" />
              </div>
            </div>
          </div>
          <div class="product-block__text">
            Up to 20 days battery
          </div>
        </div>
      </div>
      <div class="img-block">
        <video
                loop
                class="product-block__img--xiaomi"
                style="width: 400px; height: 300px;"
                autoplay="true" loop="true" muted="muted"
                id="video"
        >
          <source src="./img/video.mp4" type="video/mp4" />
        </video>
        <a
                href="https://docs.google.com/forms/d/1zoMJcV9kfMwveQ4aMNn69FshoJY8Xx6nuMB1ldggDhE/viewform?edit_requested=true"
                class="btn btn--orange btn--xiaomi"
                id="btn-Xiaomi"
        >
          know more

          <img src="./img/next.png" alt="next" />
        </a>
      </div>
    </div>
  </section>
</div>
<script src="/javascripts/main.js">
</script>
</body>
</html>
